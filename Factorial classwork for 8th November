<body>
    <script type="text/Javascript">
        // matric number ends with 15
        
        function factorial(matricNumber){
        if (matricNumber < 0){
            return "Factorial is not defined for negative numbers";
        }
        if (matricNumber === 0 || matricNumber === 1) {
            return 1;
        }
        let result = 1;
        for (let i = 2; i <= matricNumber; i++) {
            result *= i;
        }
        return result;
    }
    let number = 15;
    Answer = factorial(number);
    console.log(Answer);   

    </script>
</body>
